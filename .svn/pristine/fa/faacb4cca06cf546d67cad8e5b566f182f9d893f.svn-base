<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:gravity="top"
    android:orientation="vertical"
    style="@style/margens_formularios">

    <TableLayout 
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TableRow 
         android:layout_height="wrap_content" 
        android:layout_width="2dp"
       
        >  
     <TextView 
         	
             android:gravity="center"
            android:layout_weight="2" 
            android:layout_width="fill_parent"
            android:text="@string/busca_relatorio_venda_string_tabela"
         android:background="@color/cabecalho_tabelas"
             android:textColor="@color/texto_cabecalho_tabels"
                         style="@style/estilo_tabelas"
             
            />  
    
   
 
    </TableRow> 
     
  
    
     
</TableLayout>

    <EditText
                android:layout_marginLeft="10dip"
        
        android:id="@+id/data_inicial"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:dividerHeight="40.0sp"
        android:ems="10"
        android:hint="@string/data_inicial"
        android:focusable="false"
                    style="@style/estilo_tabelas"
        
                />
     
    
    <EditText
           android:layout_marginTop="10dp"
        android:id="@+id/data_final"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
        android:background="@android:drawable/editbox_background"
              android:hint="@string/data_final"
      
         android:dividerHeight="40.0sp"
        android:focusable="false"
                    style="@style/estilo_tabelas"
        
         />

    
      
    
    
    <TableLayout 
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

         <TableRow 
         android:layout_height="wrap_content" 
        android:layout_width="2dp"
       
        >

             <CheckBox
                 android:id="@+id/pagamentos_pendentes"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Efetuados" 
                 android:layout_marginLeft="10dip"
                      android:layout_marginTop="10dp" />

             <CheckBox
                 android:id="@+id/pagamentos_efetuados"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Pendentes"
                  android:layout_marginLeft="15dp"
                      android:layout_marginTop="10dp"  />
 
    </TableRow> 
        
        

    <TableRow 
         android:layout_height="wrap_content" 
        android:layout_width="2dp"
       
        >  
        
        
            <Button
        android:id="@+id/botao_buscar_relatorio"
        android:layout_width="143dip"
        android:layout_height="45dip"
        android:background="#1E90FF"
        android:text="@string/botao_buscar_relatorio"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" 
        android:layout_marginLeft="10dip"/>

            
            
    <Button
        android:id="@+id/botao_limpar_filtro_relatorio"
        android:layout_width="143dip"
        android:layout_height="45dip"
       android:layout_marginLeft="15dp"
        android:background="#1E90FF"
        android:text="@string/botao_limpar_filtro_relatorio"
        android:textColor="#FFFFFF" 
                android:layout_marginTop="10dp" />
        
        
        
 
    </TableRow> 
     
  
    
     
</TableLayout>
    
    
</LinearLayout>
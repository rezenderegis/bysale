<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
            <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        	<item name="android:textSize">14sp</item>
            
    </style>

    
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    <item name="android:textColor">@color/botao_picker</item>
    </style>
    
    
        <style name="estilo_tabelas" parent="@android:style/TextAppearance.Medium">
        	<item name="android:textSize">14sp</item>
        	<item name="android:padding">8dp</item>
   	    </style>
    
         <style name="fonte_formularios" parent="@android:style/TextAppearance.Medium">
        	<item name="android:textSize">14sp</item>
   	    </style>
    
         <style name="margens_formularios" parent="@android:style/TextAppearance.Medium">
             
          <item name="android:layout_marginLeft">5dip</item>   
          <item name="android:layout_marginRight">5dip</item>   
          <item name="android:layout_marginTop">5dip</item>  
          <item name="android:background">@color/branco</item> 
             
                    
         </style>
    
</resources>

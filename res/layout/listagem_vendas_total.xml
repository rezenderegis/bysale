<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:shrinkColumns="*"
    android:stretchColumns="*" 
     android:background="@drawable/cell_sahpe">

    <TableRow 
        android:layout_height="2dp" 
        android:layout_width="2dp">  

                 <TextView
                     android:text="Total" 
            android:layout_weight="1" 
                        android:layout_width="2dp"
            android:textStyle="bold"
            android:textColor="#000000"
             android:gravity="center"
                         style="@style/estilo_tabelas"
             
            />
                 
         <TextView 
             android:id="@+id/total_relatoriovenda"
            android:layout_weight="1" 
                        android:layout_width="2dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
                        style="@style/estilo_tabelas"
            
            />
        
    </TableRow>
    

   
    <TableRow 
        android:layout_height="2dp" 
        android:layout_width="2dp">  
        
        <Button
        android:id="@+id/botao_incluir_produto_venda"
        android:layout_width="143dip"
        android:layout_height="45dip"
        android:background="#1E90FF"
        android:text="@string/botao_incluir_produto_venda"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="1dip" 
        android:layout_marginLeft="5dip"
        android:layout_marginBottom="5dip"/>

    <Button
        android:id="@+id/fechar_venda"
        android:layout_width="143dip"
        android:layout_height="45dip"
        android:layout_toRightOf="@+id/fazer_login_tela_inicial"  
        android:textSize="12sp"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="5dip"
        android:background="#1E90FF"
        android:text="@string/botao_fechar_venda"
        android:textColor="#FFFFFF" 
                android:layout_marginTop="1dip" 
                android:layout_marginBottom="5dip"/>
            </TableRow> 
     
   <Button
           android:id="@+id/emitir_pedido"
           android:layout_width="143dip"
           android:layout_height="45dip"
        
           android:layout_marginTop="5sp"
           android:layout_marginRight="5sp"
           android:layout_marginLeft="5sp"
           android:background="#1E90FF"
           android:text="@string/botao_confirmar_fechamento"
           android:textColor="#FFFFFF"
           android:layout_marginBottom="5sp"
			           android:textSize="12sp"
			           
           />

</TableLayout>
<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
       android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
 android:shrinkColumns="*"
    android:stretchColumns="*" 
     android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/cell_sahpe">


    <TableRow 
         android:layout_height="wrap_content" 
        android:layout_width="2dp"
       
        >  
     
         <TextView 
            android:id="@+id/listagem_pagamento_forma_pagamento_informada"
             android:gravity="center"
            android:layout_weight="2" 
            android:layout_width="6dp"
                        style="@style/estilo_tabelas"
            
            />  
 
        
 <TextView 
            android:id="@+id/listagem_pagamento_data_pagamento"
            
            android:gravity="center"
            android:layout_weight="1" 
            android:layout_width="5dp"
                  style="@style/estilo_tabelas"
      
            />  

    
        <TextView 
            android:id="@+id/listagem_pagamento_preco"
            android:gravity="left"
           
         
            android:layout_weight="1" 
            android:layout_width="40sp"
                        style="@style/estilo_tabelas"
            
             />  
             
            <TextView 
            android:id="@+id/situacao_pagamento_informado"
            android:gravity="left"
           
         
            android:layout_weight="1" 
            android:layout_width="1sp"
                        style="@style/estilo_tabelas"
            
             />     
 
    </TableRow> 
     
  
    
     
</TableLayout>
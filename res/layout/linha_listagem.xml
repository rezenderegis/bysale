<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fundo"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <!-- android:background="@color/linha_impar" -->

    <ImageView
        android:id="@+id/foto"
        android:layout_width="70dp"
        android:layout_height="70dp"
          android:contentDescription="desc"
        android:background="@color/borda_imagem"
        android:paddingLeft="10dp" 
        android:paddingRight="10dp"/>

         <TextView
        android:id="@+id/situacao_venda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/foto"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/foto"
        
        android:textSize="14sp"
        android:textStyle="bold" />
    
        <TextView
        android:id="@id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_below="@id/situacao_venda"
        android:layout_toRightOf="@+id/foto"
        android:text="Nome"
        android:textSize="14sp"
        android:textStyle="bold" />
     

    <TextView
        android:id="@+id/textoTotal"
                 android:layout_toRightOf="@+id/foto"
                 android:layout_below="@id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textColor="@color/cinza"
        android:textSize="14sp" 
        />

    <TextView
        android:id="@+id/totalvenda"
        android:layout_below="@id/nome"
        android:layout_toRightOf="@+id/textoTotal" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:textColor="@color/cinza"
        android:textSize="14sp" 
        />

    <TextView
        android:id="@+id/textoData"
                 android:layout_toRightOf="@+id/foto"
                 android:layout_below="@id/textoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_venda"
        android:textColor="@color/cinza"
        android:textSize="14sp" 
        />

    <TextView
        android:id="@+id/data_venda"
        android:layout_below="@id/totalvenda"
        android:layout_toRightOf="@+id/textoData" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cinza"    
        android:textSize="14sp" 
        />

</RelativeLayout>